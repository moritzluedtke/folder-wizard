<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane styleClass="background" stylesheets="@../css/MainWindow.css" xmlns="http://javafx.com/javafx/8.0.144"
		   xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.moritzluedtke.gui.MainWindowController"
		   fx:id="rootStackPane">
	
	<VBox fx:id="aboutDialogContent"
		  alignment="CENTER"
		  maxWidth="750" spacing="20" opacity="0">
		<padding>
			<Insets top="20" left="20" bottom="20" right="20"/>
		</padding>
		<Label text="Über File Wizard" textAlignment="CENTER"
			   styleClass="about-dialog-title"/>
		<Label fx:id="labelAboutDialogContent"
			   styleClass="about-dialog-content-text" wrapText="true"/>
	</VBox>
	
	<BorderPane>
		<top>
			<StackPane onMouseClicked="#handleHeaderMainMenuClick">
				<Pane styleClass="bg-main-header-banner" prefHeight="120"/>
				<VBox alignment="CENTER">
					<Label fx:id="labelHeaderTitle" text="Folder Wizard"
						   alignment="CENTER"
						   styleClass="header-label"
						   BorderPane.alignment="CENTER"/>
					<Label fx:id="labelHeaderSubtitle" text="Du bist nur so gut, wie deine Ordnerstruktur!"
						   alignment="CENTER"
						   styleClass="header-sublabel"/>
				</VBox>
			</StackPane>
		</top>
		
		<center>
			<HBox alignment="CENTER" spacing="50" translateY="-10">
				<JFXButton text="Create File/Folder"
						   onAction="#handleButtonCreateClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/ic_w_new_file.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton text="Delete File/Folder"
						   onAction="#handleButtonDeleteClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/ic_w_trashcan.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton text="Create Folder by FML"
						   onAction="#handleButtonCreateByFMLClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/ic_w_list.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
			</HBox>
		</center>
		
		<bottom>
			<VBox alignment="CENTER" translateY="-8">
				<Label text="created by Moritz Lüdtke"
					   onMouseClicked="#handleLabelCreatedByMainMenuClicked"
					   styleClass="signature-label"/>
			</VBox>
		</bottom>
	</BorderPane>
	
	<BorderPane maxWidth="800" maxHeight="540" fx:id="paneDetailArea" styleClass="detail-area" translateY="570">
		<top>
			<StackPane>
				<!--<Line startX="10" startY="10" endX="100" endY="10"/>-->
				<Label text="Create File/Folder"
					   styleClass="detail-area-header-title"
					   alignment="CENTER" BorderPane.alignment="CENTER"/>
				<JFXButton fx:id="buttonDetailAreaClose"
						   onAction="#handleDetailAreaCloseButtonClicked"
						   styleClass="button-detail-area-close"
						   maxWidth="50" maxHeight="50" translateX="370"
						   ripplerFill="#bcbcbc"
						   focusTraversable="false">
					<graphic>
						<ImageView fitWidth="45" fitHeight="45">
							<Image url="/gui/icon/color/ic_c_close.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
			</StackPane>
		</top>
		
		<center>
			<VBox>
				<HBox>
					<VBox>
						<!--Label "Root Pfad" und Text Edit für die Rootpath Anzeige, Eingabe-->
					</VBox>
					<JFXButton onAction="#handleDetailAreaOpenRootFolderButtonClicked"
							   ripplerFill="#bcbcbc">
						<graphic>
							<ImageView fitWidth="40" fitHeight="40">
								<Image url="/gui/icon/ic_w_open_folder.png"/>
							</ImageView>
						</graphic>
					</JFXButton>
				</HBox>
				
				<!--Weitere HBoxen für die anderen Elemente z.B. Namenspattern Bildung-->
			</VBox>
		</center>
		
		<bottom>
			<!--Create Button-->
		</bottom>
	</BorderPane>

</StackPane>
