<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane styleClass="background" stylesheets="@../css/MainWindow.css" xmlns="http://javafx.com/javafx/8.0.144"
		   xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.moritzluedtke.gui.MainWindowController"
		   fx:id="rootStackPane">
	
	<!--About dialog-->
	<VBox fx:id="aboutDialogContent"
		  alignment="CENTER"
		  maxWidth="750" spacing="20" opacity="0">
		<padding>
			<Insets top="20" left="20" bottom="20" right="20"/>
		</padding>
		<Label text="Über File Wizard" textAlignment="CENTER"
			   styleClass="about-dialog-title"/>
		<Label fx:id="labelAboutDialogContentMainArea"
			   styleClass="about-dialog-content-text" wrapText="true"/>
	</VBox>
	
	<!--Main area-->
	<BorderPane>
		<!--Header-->
		<top>
			<StackPane onMouseClicked="#handleHeaderMainMenuClick">
				<Pane styleClass="bg-main-header-banner" prefHeight="120"/>
				<VBox alignment="CENTER">
					<Label fx:id="labelHeaderTitleMainArea" text="Folder Wizard"
						   alignment="CENTER"
						   styleClass="header-label-main-area"
						   BorderPane.alignment="CENTER"/>
					<Label fx:id="labelHeaderSubtitleMainArea" text="Du bist nur so gut, wie deine Ordnerstruktur!"
						   alignment="CENTER"
						   styleClass="header-sublabel-main-area"/>
				</VBox>
			</StackPane>
		</top>
		
		<!--3 Main buttons-->
		<center>
			<HBox alignment="CENTER" spacing="50" translateY="-10">
				<JFXButton text="Create File/Folder"
						   onAction="#handleMainAreaButtonCreateClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/white/ic_w_new_file.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton text="Delete File/Folder"
						   onAction="#handleMainAreaButtonDeleteClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/white/ic_w_trashcan.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton text="Create Folder by FML"
						   onAction="#handleMainAreaButtonCreateByFMLClicked"
						   maxHeight="200" maxWidth="300"
						   prefHeight="200"
						   styleClass="button-large-main-menu" textAlignment="CENTER"
						   focusTraversable="false" wrapText="true">
					<graphic>
						<ImageView fitWidth="50" fitHeight="50">
							<Image url="/gui/icon/white/ic_w_list.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
			</HBox>
		</center>
		
		<!--Created by label-->
		<bottom>
			<VBox alignment="CENTER" translateY="-8">
				<Label text="created by Moritz Lüdtke"
					   onMouseClicked="#handleLabelCreatedByMainMenuClicked"
					   styleClass="signature-label-main-area"/>
			</VBox>
		</bottom>
	</BorderPane>
	
	<!--Detail area-->
	<BorderPane fx:id="paneDetailArea"
				maxWidth="800" maxHeight="540"
				styleClass="detail-area" translateY="570">
		<!--Header-->
		<top>
			<StackPane>
				<Label text="Create File/Folder"
					   styleClass="header-title-detail-area"
					   alignment="CENTER" BorderPane.alignment="CENTER"/>
				<JFXButton fx:id="buttonCloseDetailArea"
						   onAction="#handleDetailAreaButtonCloseClicked"
						   styleClass="button-detail-area"
						   maxWidth="50" maxHeight="50" translateX="370"
						   ripplerFill="#bcbcbc"
						   focusTraversable="false">
					<graphic>
						<ImageView fitWidth="45" fitHeight="45">
							<Image url="/gui/icon/color/ic_c_close.png"/>
						</ImageView>
					</graphic>
				</JFXButton>
			</StackPane>
		</top>
		
		<!--Specify root path, naming, other options-->
		<center>
			<VBox BorderPane.alignment="CENTER" spacing="40">
				<padding>
					<Insets top="50" left="20" bottom="20" right="20"/>
				</padding>
				
				<!--Root path selection-->
				<HBox alignment="CENTER" spacing="10">
					<VBox>
						<Label text="Specify root path:"
							   styleClass="detail-area-label"/>
						<JFXTextField fx:id="rootPathTextFieldDetailArea"
									  styleClass=""
									  prefWidth="350"/>
					</VBox>
					
					<JFXButton onAction="#handleDetailAreaButtonOpenRootFolderClicked"
							   ripplerFill="#bcbcbc" focusTraversable="false">
						<graphic>
							<ImageView fitWidth="40" fitHeight="40">
								<Image url="/gui/icon/black/ic_b_open_folder.png"/>
							</ImageView>
						</graphic>
					</JFXButton>
				</HBox>
				
				<!--Weitere HBoxen für die anderen Elemente z.B. Namenspattern-Bildung-->
			</VBox>
		</center>
		
		<!--Create button-->
		<bottom>
			<HBox alignment="CENTER">
				<padding>
					<Insets bottom="15"/>
				</padding>
				
				<JFXButton onAction="#handleDetailAreaButtonCreateClicked"
						   text="Create!"
						   styleClass="button-large-detail-area"
						   focusTraversable="false"/>
			</HBox>
		</bottom>
	</BorderPane>

</StackPane>
