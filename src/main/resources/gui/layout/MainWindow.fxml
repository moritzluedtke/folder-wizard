<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="background" stylesheets="@../css/MainWindow.css" xmlns="http://javafx.com/javafx/8.0.121"
			xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.moritzluedtke.gui.MainWindowController">
	
	<top>
		<StackPane>
			<Pane styleClass="header-banner" prefHeight="120"/>
			<VBox alignment="CENTER">
				<Label text="Folder Wizard"
					   alignment="CENTER"
					   styleClass="header-label"
					   BorderPane.alignment="CENTER"/>
				<Label text="Du bist nur so gut, wie deine Ordnerstruktur!"
					   alignment="CENTER"
					   styleClass="header-sublabel"/>
			</VBox>
		</StackPane>
	</top>
	
	<center>
		<HBox alignment="CENTER" spacing="50" translateY="-10">
			<JFXButton fx:id="buttonCreate" text="Create File/Folder"
					   onAction="#clickedButtonCreate"
					   maxHeight="200" maxWidth="300"
					   prefHeight="200"
					   styleClass="button-large-main-createFileFolder" textAlignment="CENTER"
					   focusTraversable="false" wrapText="true">
				<graphic>
					<ImageView fitWidth="50" fitHeight="50">
						<Image url="/gui/icon/ic_w_new_file.png"/>
					</ImageView>
				</graphic>
			</JFXButton>
			<JFXButton fx:id="buttonDelete" text="Delete File/Folder"
					   onAction="#clickedButtonDelete"
					   maxHeight="200" maxWidth="300"
					   prefHeight="200"
					   styleClass="button-large-main-deleteFileFolder" textAlignment="CENTER"
					   focusTraversable="false" wrapText="true">
				<graphic>
					<ImageView fitWidth="50" fitHeight="50">
						<Image url="/gui/icon/ic_w_trashcan.png"/>
					</ImageView>
				</graphic>
			</JFXButton>
			<JFXButton fx:id="buttonCreateByStructure" text="Create Folder by FML"
					   onAction="#clickedButtonCreateByStructure"
					   maxHeight="200" maxWidth="300"
					   prefHeight="200"
					   styleClass="button-large-main-createFolderStructure" textAlignment="CENTER"
					   focusTraversable="false" wrapText="true">
				<graphic>
					<ImageView fitWidth="50" fitHeight="50">
						<Image url="/gui/icon/ic_w_list.png"/>
					</ImageView>
				</graphic>
			</JFXButton>
		</HBox>
	</center>
	
	<bottom>
		<VBox alignment="CENTER" translateY="-8">
			<Label text="created by Moritz LÃ¼dtke"
				   styleClass="signature-label"/>
		</VBox>
	</bottom>

</BorderPane>
